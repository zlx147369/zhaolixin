<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.activity.LoginActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_action_navigation_arrow_back"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/iv_back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:text="注册"
        android:textColor="#000000"
        android:textSize="16sp"
        android:id="@+id/tv_zhu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="用户登录"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_deng"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/tv_deng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:id="@+id/et_phone"
        android:hint=" +86 输入手机号"
        android:background="@color/picture_color_transparent_e0db"
        />
    <RelativeLayout
        android:id="@+id/ll"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="320dp"
            android:layout_height="@dimen/dp_50"
            android:background="@color/picture_color_transparent_e0db"
            android:hint="  请输入验证码"
            android:id="@+id/et_yan"
            android:password="true"
            />
        <ImageView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yer"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="使用登录密码登录"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/tv_mi"
        />

    <Button
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/tv_mi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@color/design_default_color_error"
        />

</androidx.constraintlayout.widget.ConstraintLayout>